/*
17. Leia um vetor de 10 posições e atribua valor 0
    para todos os elementos que possuírem valores negativos.
*/

#include <stdio.h>   // Biblioteca padrão para entrada e saída (printf, scanf)
#include <stdlib.h>  // Biblioteca padrão (para system("pause"))

int main()  // Início da função principal
{
    int vetor[10];  // Declara um vetor de 10 posições para armazenar números inteiros

    // ---------------------- ENTRADA DE DADOS ----------------------
    printf("Digite 10 numeros inteiros (positivos ou negativos):\n");  // Mensagem inicial

    for (int i = 0; i < 10; i++)  // Laço que percorre todas as 10 posições do vetor
    {
        printf("Vetor[%d]: ", i);  // Mostra o índice atual
        scanf("%d", &vetor[i]);    // Lê o valor digitado e armazena no vetor
    }

    // ---------------------- PROCESSAMENTO ----------------------
    for (int i = 0; i < 10; i++)  // Percorre novamente o vetor
    {
        if (vetor[i] < 0)     // Verifica se o valor é negativo
        {
            vetor[i] = 0;     // Se for negativo, substitui por 0
        }
    }

    // ---------------------- SAÍDA DE DADOS ----------------------
    printf("\nVetor resultante (negativos substituidos por 0):\n");  // Mensagem de saída

    for (int i = 0; i < 10; i++)  // Mostra todos os elementos modificados
    {
        printf("Vetor[%d] = %d\n", i, vetor[i]);  // Exibe o índice e o valor correspondente
    }

    system("pause");  // Pausa o programa (útil no Windows)
    return 0;         // Indica que o programa terminou corretamente
}
