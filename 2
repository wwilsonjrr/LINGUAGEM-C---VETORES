/*
2. Crie um programa que lê 6 valores inteiros e, em seguida,
   mostre na tela os valores lidos.
*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída
#include <stdlib.h>  // Biblioteca padrão (para system("pause"))

int main()
{
    int A[6];  // Declara um vetor de 6 posições inteiras

    // Leitura dos 6 valores inteiros
    for (int i = 0; i < 6; i++)  // O laço repete 6 vezes (índices 0 a 5)
    {
        printf("Digite o valor %d: ", i + 1);  // Pede o valor ao usuário
        scanf("%d", &A[i]);  // Armazena o valor lido na posição i do vetor
    }

    // Mostra os valores lidos
    printf("\nValores digitados:\n");

    for (int i = 0; i < 6; i++)  // Percorre novamente o vetor
    {
        printf("A[%d] = %d\n", i, A[i]);  // Exibe o valor armazenado
    }

    system("pause");  // Pausa o programa antes de encerrar (Windows)
    return 0;         // Finaliza o programa corretamente
}

