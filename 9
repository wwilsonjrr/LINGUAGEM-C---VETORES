/* 9. Crie um programa que lê 6 valores inteiros pares e, em seguida,
      mostre na tela os valores lidos na ordem inversa. */


#include <stdio.h>
#include <stdlib.h>

int main()
{
    int A[6];  // Vetor para armazenar os 6 valores inteiros pares

    printf("Digite 6 numeros inteiros PARES:\n");

    for (int i = 0; i < 6; i++)
    {
        int valor;

        printf("A[%d]: ", i);
        scanf("%d", &valor);

        // Enquanto o valor NÃO for par, fica pedindo novamente
        while (valor % 2 != 0)
        {
            printf("Valor invalido! Digite apenas numeros pares.\n");
            printf("A[%d]: ", i);
            scanf("%d", &valor);
        }

        A[i] = valor;  // Armazena o número par no vetor
    }

    // ---------------------- SAÍDA EM ORDEM INVERSA ----------------------
    printf("\nValores pares em ordem inversa:\n");

    for (int i = 5; i >= 0; i--)
    {
        printf("A[%d] = %d\n", i, A[i]);
    }

    system("pause");
    return 0;
}
